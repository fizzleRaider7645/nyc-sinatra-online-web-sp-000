<form method="post" action="/figures">
  <label for="figure_name">Name</label>
  <input type="text" name="figure[name]" id="figure_name">
  <br></br>
  <h2>Title:</h2>
  <% @titles.each do |title| %>
  <p><input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%=title.name%></input></p>
  <% end %>
  <h2>Create New Title:</h2>
  <input type="text" name="title[name]" id="new_title">
  <h2>Landmarks:</h2>
  <% @landmarks.each do |landmark| %>
  <p><input type="checkbox" name="figure[landmark_ids][]" id="title_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%></input></p>
  <% end %>
  <h2>Create New Landmark:</h2>
  <label for="name">Name</label>
  <input type="text" name="landmark[name]" id="new_landmark_name">
  <label for="year">Year</label>
  <input type="text" name="landmark[year]" id="new_landmark_year">
  <input type="submit" value="Create New Figures">
  </form>